<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <h2><%= link_to task.title, task_path(task.id) %></h2>
  <%= link_to "Delete #{task.title}",
      destroy_task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
<% end %>
<div>
  <%= link_to 'Add task', new_task_path %>
</div>
